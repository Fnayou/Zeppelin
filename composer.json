{
    "name": "fnayou/zeppelin",
    "type": "library",
    "description": "Simple Guzzle configurator using client configuration and api descriptions files.",
    "keywords": [
        "guzzle",
        "configuration",
        "description",
        "api",
        "web-services"
    ],
    "homepage": "https://github.com/fnayou/zeppelin",
    "license": "MIT",
    "authors": [
        {
            "name": "Aymen FNAYOU",
            "email": "fnayou.aymen@gmail.com",
            "homepage": "http://aymen-fnayou.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "symfony/options-resolver": "^3.1",
        "symfony/filesystem": "^3.1",
        "symfony/yaml": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0||~5.0",
        "squizlabs/php_codesniffer": "~2.3",
        "symfony/var-dumper": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Fnayou\\Zeppelin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fnayou\\Zeppelin\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "sniff": "phpcs src/ --standard=PSR2 --report=summary",
        "format": "phpcbf --standard=psr2 src/"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
